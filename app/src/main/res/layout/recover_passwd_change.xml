<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/step3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/card_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fieldNewPasswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/field_bordered_top"
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="0.1dp"
                android:hint="Digite sua nova senha"
                android:inputType="textPassword"
                android:padding="20dp" />

            <EditText
                android:id="@+id/fieldNewPasswdConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/field_bordered_bottom"
                android:drawableLeft="@drawable/ic_key"
                android:drawablePadding="10dp"
                android:fontFamily="sans-serif"
                android:hint="Confirme sua nova senha"
                android:inputType="textPassword"
                android:padding="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnConfirmRecover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/button_color"
                    android:text="@string/action_save"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>